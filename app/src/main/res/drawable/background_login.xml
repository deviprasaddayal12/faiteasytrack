<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <!--<gradient-->
                <!--android:angle="45"-->
                <!--android:startColor="#dd5771e8"-->
                <!--android:centerColor="#aa5771e8"-->
                <!--android:endColor="#775771e8"/>-->
            <solid android:color="#dd002084"/>
        </shape>
    </item>

    <item
        android:left="-200dp"
        android:right="200dp"
        android:bottom="100dp"
        android:top="-100dp">
        <rotate android:fromDegrees="-45">
            <shape android:shape="rectangle">
                <corners android:radius="50dp" />
                <gradient
                    android:angle="45"
                    android:startColor="#dd002084"
                    android:centerColor="#aa002084"
                    android:endColor="#77002084"/>
            </shape>
        </rotate>
    </item>

    <item
        android:left="-150dp"
        android:right="150dp"
        android:bottom="50dp"
        android:top="-10dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <corners android:radius="50dp" />
                <solid android:color="@color/colorWhite"/>
            </shape>
        </rotate>
    </item>

    <item
        android:bottom="-450dp"
        android:top="450dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <corners android:topLeftRadius="50dp" />
                <solid android:color="#dd002084"/>
            </shape>
        </rotate>
    </item>

    <item
        android:top="-600dp"
        android:bottom="600dp"
        android:left="150dp"
        android:right="-200dp">
        <rotate android:fromDegrees="45">
            <shape android:shape="rectangle">
                <corners android:bottomRightRadius="50dp" />
                <solid android:color="#dd002084"/>
            </shape>
        </rotate>
    </item>

</layer-list>