<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">

        </shape>
    </item>

    <item android:bottom="180dp" android:top="-300dp">
        <rotate android:fromDegrees="70" >
            <shape android:shape="oval">
                <gradient android:startColor="#ccbbbbbb"
                    android:centerColor="#77bbbbbb"
                    android:endColor="@android:color/transparent" />
            </shape>
        </rotate>
    </item>

    <item android:bottom="200dp" android:top="-300dp">
        <rotate android:fromDegrees="70" >
            <shape android:shape="oval">
                <solid android:color="@color/colorPrimary" />
            </shape>
        </rotate>
    </item>

</layer-list>
